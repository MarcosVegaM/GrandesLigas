@model GrandesLigas.Models.Liga

<h2 class="text-center my-4">Crear Liga</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div class="card-header text-center bg-primary text-white">
                        <h4>Detalles de la Liga</h4>
                    </div>
                    <div class="card-body">
                        <!-- Nombre -->
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingrese el nombre de la liga" })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <!-- Temporada -->
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Temporada, new { @class = "form-label" })
                            @Html.TextBoxFor(model => model.Temporada, new { @class = "form-control", placeholder = "Ingrese la temporada (ej. 2025)" })
                            @Html.ValidationMessageFor(model => model.Temporada, "", new { @class = "text-danger" })
                        </div>

                        <!-- Descripción -->
                        <div class="form-group mb-3">
                            @Html.LabelFor(model => model.Descripcion, new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", placeholder = "Ingrese una descripción", rows = "4" })
                            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Crear</button>
                            <a href="@Url.Action("Index", "Liga")" class="btn btn-secondary btn-lg ms-3">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

